@using Microsoft.AspNetCore.Identity
@model Login_Lan1.ViewModel.UserCreateViewModel

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}

<form asp-action="Create" asp-controller="UserTest" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Password"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="ConfirmPassword"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="City"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Address"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="RoleId"></label>
        </div>
        <div class="col-sm-10">
            <select asp-for="RoleId" class="custom-select">
                <option value="">Select a Role</option>
                @if (roles != null && roles.Any())
                {
                    foreach (var role in roles)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">
                Create
            </button>
            <a asp-controller="UserTest" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>