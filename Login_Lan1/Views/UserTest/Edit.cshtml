@using Microsoft.AspNetCore.Identity
@model Login_Lan1.ViewModel.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.Roles as IQueryable<IdentityRole>;
}

<form asp-action="Edit" asp-controller="UserTest" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="UserId" />
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="City"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Address"></label>
        </div>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="RoleId"></label>
        </div>
        <div class="col-sm-10">
            <select asp-for="RoleId" class="custom-select">
                <option value="">Select a Role</option>
                @if (roles != null && roles.Any())
                {
                    foreach (var role in roles)
                    {
                       
                            <option value="@role.Id" selected="@(role.Id==Model.RoleId)">@role.Name</option>
                        

                    }
                }
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">
                Update
            </button>
            <a asp-controller="UserTest" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>